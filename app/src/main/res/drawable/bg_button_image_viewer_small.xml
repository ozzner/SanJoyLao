<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >

    <!-- view background color -->
    <solid android:color="#3e181818" >
    </solid>

    <!-- If you want to add some padding -->
