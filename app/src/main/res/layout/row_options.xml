<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_item_banquet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="@dimen/space_16dp"
                android:weightSum="3">


                <TextView
                    android:id="@+id/tv_options_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:text="@string/default_text"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/bt_options_pedir"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="@dimen/space_4dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/button_selector"
                    android:text="Pedir"
                    android:textAllCaps="true"
                    android:textColor="@drawable/button_textcolor_selector"
                    android:textSize="@dimen/txt_10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:orientation="horizontal"
                android:padding="@dimen/space_4dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_plate_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/list_selector"
                        android:scaleType="centerCrop"
                        android:src="@drawable/plate_2" />

                    <TextView
                        android:id="@+id/tv_plate1"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignBottom="@+id/iv_plate_one"
                        android:layout_alignEnd="@+id/iv_plate_one"
                        android:layout_alignLeft="@+id/iv_plate_one"
                        android:layout_alignRight="@+id/iv_plate_one"
                        android:layout_alignStart="@+id/iv_plate_one"
                        android:background="@color/colorPrimary_trans_35"
                        android:gravity="center"
                        android:text="@string/default_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_10sp" />
                </RelativeLayout>

                <Space
                    android:layout_width="@dimen/space_8dp"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_plate_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/list_selector"
                        android:scaleType="centerCrop"
                        android:src="@drawable/plate_1" />


                    <TextView
                        android:id="@+id/tv_plate2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignBottom="@+id/iv_plate_two"
                        android:layout_alignEnd="@+id/iv_plate_two"
                        android:layout_alignLeft="@+id/iv_plate_two"
                        android:layout_alignRight="@+id/iv_plate_two"
                        android:layout_alignStart="@+id/iv_plate_two"
                        android:background="@color/colorPrimary_trans_35"
                        android:gravity="center"
                        android:text="@string/default_text"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_10sp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>