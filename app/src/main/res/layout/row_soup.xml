<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_soup_height">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item_soup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/list_selector">

        <!--Main content-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <!--Image-->
            <LinearLayout
                android:id="@+id/lay_image_banquet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/space_8dp"
                android:paddingLeft="@dimen/space_4dp"
                android:paddingTop="@dimen/space_8dp">

                <ImageView
                    android:id="@+id/iv_image_soup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plate_1" />
            </LinearLayout>

            <!--Content-->
            <LinearLayout
                android:id="@+id/lay_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="@dimen/space_4dp"
                android:weightSum="4">

                <!--Name-->
                <LinearLayout
                    android:id="@+id/lay_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/space_8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Large Text"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <ImageView
                            android:id="@+id/iv_soup_info"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_info"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/space_4dp"/>
                    </RelativeLayout>

                </LinearLayout>


                <!--Titles-->
                <LinearLayout
                    android:id="@+id/lay_titles"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/space_10dp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_title1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/title_personal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14sp" />

                    <TextView
                        android:id="@+id/tv_title2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/title_mediana"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14sp" />

                    <TextView
                        android:id="@+id/tv_title3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/title_grande"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14sp" />
                </LinearLayout>

                <!--Price-->
                <LinearLayout
                    android:id="@+id/lay_prices"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/space_10dp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tv_price1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="S/. 15.50"
                        android:textSize="@dimen/txt_13sp" />

                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="S/. 55.50"
                        android:textSize="@dimen/txt_13sp" />

                    <TextView
                        android:id="@+id/tv_price3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="S/. 25.00"
                        android:textSize="@dimen/txt_13sp" />
                </LinearLayout>

                <!--Order-->
                <LinearLayout
                    android:id="@+id/lay_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/space_8dp">

                    <Button
                        android:id="@+id/bt_order_soup"
                        android:layout_width="65dp"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/button_selector"
                        android:text="Pedir"
                        android:textColor="@drawable/button_textcolor_selector"
                        android:textSize="@dimen/txt_10sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>