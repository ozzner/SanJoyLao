<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_image"
    tools:context="rsantillanc.sanjoylao.view.fragment.OrdersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.075"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16dp"
            android:paddingRight="@dimen/space_16dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_number_table"
                android:layout_width="@dimen/space_0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="left|center_vertical"
                android:text="TOTAL"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_order_price_total"
                android:layout_width="@dimen/space_0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right"
                android:text="@string/default_text"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_orders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.925"
            android:divider="@color/whitesmoke"
            android:scrollbars="none"
            android:dividerHeight="0.75dp">
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:orientation="vertical"
            android:layout_height="@dimen/editext_height">

            <Button
                android:background="@drawable/button_inverse_selector"
                android:id="@+id/bt_confirm_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_confirm_order"
                android:textSize="@dimen/txt_16sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
