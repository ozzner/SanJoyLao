<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item_banquet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/list_selector"
        android:background="@color/transparent"
        android:padding="@dimen/space_16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="@dimen/space_8dp"
            android:background="@color/transparent"
            >

            <LinearLayout
                android:id="@+id/lay_image_banquet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8dp"
                android:padding="@dimen/space_4dp">
                <ImageView
                    android:id="@+id/iv_banquet"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plate_2"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_banquet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/space_4dp"
                android:textColor="@color/black"
                android:text="Banquete para 2 personas"
                android:layout_toRightOf="@+id/lay_image_banquet"
                android:layout_toEndOf="@+id/lay_image_banquet" />

            <TextView
                android:id="@+id/tv_banquet_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:text="6 Opciones a elegir"
                android:layout_below="@+id/tv_banquet_name"
                android:layout_alignLeft="@+id/tv_banquet_name"
                android:layout_alignStart="@+id/tv_banquet_name" />

            <TextView
                android:id="@+id/tv_banquet_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.00"
                android:textSize="@dimen/txt_14sp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/space_8dp"
                android:layout_marginBottom="@dimen/space_8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/red"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>