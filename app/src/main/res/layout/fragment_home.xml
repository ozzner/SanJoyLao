<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragment.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_14dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="@dimen/space_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_image_viewer"
                android:weightSum="5">

                <ImageView
                    android:layout_width="@dimen/space_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/space_2dp"
                    android:src="@drawable/vec_call"
                    android:tint="@color/white" />

                <TextView
                    style="@style/SJLTexViewStyle"
                    android:layout_width="@dimen/space_0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_4dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="+51 993297151"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/space_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_16dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_image_viewer"
                android:padding="@dimen/space_10dp">

                <ImageView
                    android:layout_width="@dimen/space_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/space_2dp"
                    android:src="@drawable/vec_delivery"
                    android:tint="@color/white" />

                <TextView
                    style="@style/SJLTexViewStyle"
                    android:layout_width="@dimen/space_0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_4dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Delivery"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_logo_main"
                android:layout_width="wrap_content"
                android:layout_height="315dp"
                android:src="@drawable/logo"
                android:layout_weight="0.53" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="right">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/map_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/vec_map_locals" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
