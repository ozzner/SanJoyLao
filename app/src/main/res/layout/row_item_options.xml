<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cv_item_banquet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="@drawable/list_selector"
        android:padding="@dimen/space_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="@dimen/space_8dp">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/default_text"
                    android:layout_weight="2.2"
                    android:textColor="@color/black"
                    android:id="@+id/tv_options_title" />

                <Button
                    android:id="@+id/bt_options_pedir"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="@dimen/space_14dp"
                    android:background="@drawable/button_selector"
                    android:text="Pedir"
                    android:textAllCaps="true"
                    android:textColor="@drawable/button_textcolor_selector"
                    android:textSize="@dimen/txt_10sp"
                    android:layout_weight="0.8"
                  />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_no_image" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_no_image" />

                <TextView
                    android:background="@color/colorPrimary_trans_35"
                    android:id="@+id/tv_plate1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView"
                    android:layout_alignLeft="@+id/imageView"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignStart="@+id/imageView"
                    android:gravity="center"
                    android:textSize="@dimen/txt_10sp"
                    android:text="@string/default_text"
                    android:textColor="@color/white" />

                <TextView
                    android:background="@color/colorPrimary_trans_35"
                    android:id="@+id/tv_plate2"
                    android:layout_height="35dp"
                    android:layout_width="wrap_content"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_alignRight="@+id/imageView2"
                    android:layout_alignStart="@+id/imageView2"
                    android:gravity="center"
                    android:textSize="@dimen/txt_10sp"
                    android:text="@string/default_text"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>