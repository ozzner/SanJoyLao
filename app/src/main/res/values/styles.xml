<resources>

    <!-- Custom theme. -->
    <style name="SanJoyLaoTheme" parent="MaterialDesign.Base">
        <!-- Customize your theme here. -->
    </style>


    <!-- Base application theme. -->
    <style name="MaterialDesign.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">@dimen/title_actionbar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- TOOLBAR -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_actionbar</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/subtitle_actionbar</item>
    </style>


    <!-- DIALOG -->
    <style name="AppDialog" parent="android:style/Theme.Dialog">

        <!-- <item name="android:background">@color/transparente</item> -->
        <item name="android:windowBackground">@color/whitesmoke</item>
        <item name="android:colorForeground">#fff</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Holo.Light.ButtonBar.AlertDialog">
        <item name="android:textColor">#FFFF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- RATINGBAR -->
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

    <style name="CustomEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center</item>
        <item name="android:height">@dimen/editext_height</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:paddingLeft">@dimen/space_4dp</item>
        <item name="android:paddingRight">@dimen/space_4dp</item>
        <item name="android:background">@drawable/edittext_shape</item>
    </style>


    <style name="MyDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <!-- <item name="android:background">@color/transparente</item> -->
        <item name="android:windowBackground">@color/gray_color_2</item>
        <item name="android:colorForeground">#fff</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_margin">@dimen/space_10dp</item>
    </style>

</resources>
