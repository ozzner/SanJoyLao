<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="SJLTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SJLTheme.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SJLTheme.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Toolbar -->
    <style name="SJLToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/custom_title_size_toolbar</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SJLToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/custom_subtitle_size_toolbar</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- popup menu theme. -->
    <style name="PopupMenu"  parent="SJLTheme.Base.PopupOverlay">
        <!--<item name="android:background">@color/transparent_black</item>-->
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <!-- Them dialog-->
    <style name="SJLAppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- RATINGBAR -->
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

    <style name="CustomEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center</item>
        <item name="android:height">@dimen/editext_height</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:paddingLeft">@dimen/space_4dp</item>
        <item name="android:paddingRight">@dimen/space_4dp</item>
        <item name="android:background">@drawable/edittext_shape</item>
    </style>

    <style name="custom_textview" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowColor">@color/gray_color_2</item>
    </style>

