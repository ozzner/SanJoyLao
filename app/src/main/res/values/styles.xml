<resources>

    <!-- Custom theme. -->
    <style name="SanJoyLaoTheme" parent="MaterialDesign.Base">
        <!-- Customize your theme here. -->
    </style>


    <!-- Base application theme. -->
    <style name="MaterialDesign.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">@dimen/title_actionbar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- TOOLBAR -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_actionbar</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/subtitle_actionbar</item>
    </style>



</resources>
