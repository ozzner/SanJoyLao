    <!-- RATINGBAR -->
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

    <style name="CustomEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:gravity">center</item>
        <item name="android:height">@dimen/editext_height</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/whitesmoke</item>
        <item name="android:paddingLeft">@dimen/space_4dp</item>
        <item name="android:paddingRight">@dimen/space_4dp</item>
        <item name="android:background">@drawable/edittext_shape</item>
    </style>

    <style name="custom_textview" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowColor">@color/gray_color_2</item>
    </style>

